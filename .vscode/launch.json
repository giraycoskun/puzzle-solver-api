    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Solver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/solver/solver.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            },
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.main:app",
                "--reload",
                "--port=8080",
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}